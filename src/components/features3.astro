---
 import IMG1 from '../assets/img4.jpeg'
 import IMG2 from '../assets/img2.jpeg'
 import IMG3 from '../assets/img1.jpeg'

const features = [
  {
    name: 'Missão',
    description:
      'Servir com excelência por meio da Educação. Formando cidadãos éticos  solidários e competentes.',
      imageSrc: IMG1.src,
    imageAlt: 'Core Web',
  },
  {
    name: 'Valores',
    description:
      'Desenvolvimento social e humanístico; ética; respeito à singularidade; qualidade de ensino; responsabilidade social; inovação; autonomia e criatividade.',
      imageSrc: IMG2.src,
    imageAlt: 'Core Web',
  },
  {
    name: 'Visão',
    description:
      'Ser referência na área da educação que concretiza o processo ensino/aprendizagem com qualidade e comprometimento.',
      imageSrc: IMG3.src,
    imageAlt: 'Core Web',
   } 
]
--- 

<div class="bg-gray-100  dark:bg-purple-900">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-2xl py-16 sm:py-24 lg:max-w-none lg:py-32">
      <h2 class="text-4xl font-extrabold text-primary dark:text-purple-100">Nossos Pilares</h2>

       <div class="mt-6 space-y-12 lg:grid lg:grid-cols-3 lg:gap-x-6 lg:space-y-0">
        {
          features.map((feature) => (
            <div class="group relative">
              <div class="relative h-80 w-full overflow-hidden rounded-lg bg-white sm:aspect-h-1 sm:aspect-w-2 lg:aspect-h-1 lg:aspect-w-1   sm:h-64">
                <img
                  src={feature.imageSrc}
                  alt={feature.imageAlt}
                  class="h-full w-full object-cover object-center"
                  loading="lazy"
                />
              </div>
              <h3 class="mt-6 text-3xl font-extrabold text-primary dark:text-purple-300">
                   <span class="absolute inset-0" />
                  {feature.name}
                 
              </h3>
              <p class="text-base text-gray-600 dark:text-gray-100">{feature.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</div>
